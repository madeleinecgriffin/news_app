<body class="">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Saved Articles</a>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">
                    <a href="/saved">Saved Articles</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1>Saved Articles</h1>
            <p>Your Saved Articles</p>
        </div>
    </div>

    <div class="container-fluid article-container">
        {{#each Article}} {{#if saved}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a class="article-link" target="_blank" href="{{this.link}}">{{this.title}}</a>
                    <a class="btn btn-danger delete" id="deleteSave">Delete From Saved</a>
                    <a class="btn btn-info notes" id="addNote">Article Notes</a>
                </h3>
            </div>
        </div>
        {{/if}} {{/each}}
    </div>

    <div class="bootbox modal fade in" tabindex="-1" role="dialog" style="display: block; padding-left: 0px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" style="margin-top: -10px;">Ã—</button>
                    <div class="bootbox-body">
                        <div class="container-fluid text-center">
                            <h4>Notes For Article: {{id}}</h4>
                            <hr>
                            <ul class="list-group note-container">
                                <li class="list-group-item" id="note">No notes for this article yet.</li>
                            </ul>
                            <textarea placeholder="New Note" rows="4" cols="60"></textarea>
                            <button class="btn btn-success save" id="saveNote">Save Note</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>Mongo Scraper</p>
        </div>
    </footer>

</body>