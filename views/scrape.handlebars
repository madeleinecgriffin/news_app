<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Mongo Scraper</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/">Home</a>
                </li>
                <li>
                    <a class="btn btn-danger scrape-new" id="scrapeButton">SCRAPE NEW ARTICLES!</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h5>Mongo Scraper</h5>
        </div>
    </div>

    <div class="container-fluid article-container">
        {{#each articles}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a class="article-link" target="_blank" data="{{this.id}}" href="{{this.link}}">{{this.title}}</a>
                    <a class="btn btn-success save" data="{{this.id}}" dataLink="{{this.link}}" dataTitle="{{this.title}}">Add Comment</a>
                </h3>
            </div>
        </div>
        {{/each}}
    </div>


    <footer class="footer">
        <div class="container">
            <p id="footertag">Mongo Scraper</p>
        </div>
    </footer>

</body>