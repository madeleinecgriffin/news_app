<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Mongo Scraper</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/saved">Saved Articles</a>
                </li>
                <li>
                    <a class="btn btn-danger scrape-new" id="scrapeButton">SCRAPE NEW ARTICLES!</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1>Mongo Scraper</h1>
            <p>The Financial Diet Edition</p>
        </div>
    </div>

    <div class="container-fluid article-container">
        {{#each Article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a class="article-link" target="_blank" href="{{this.link}}">{{this.title}}</a>
                    {{#if saved}}
                    <a class="btn btn-success save" id="saveButton">Save Article</a>
                    {{#else}}
                    <a class="btn btn-danger delete" id="unsaveButton">Article Saved</a>
                    {{/if}}
                </h3>
            </div>
        </div>
        {{/each}}
    </div>


    <footer class="footer">
        <div class="container">
            <p>Mongo Scraper</p>
        </div>
    </footer>

</body>